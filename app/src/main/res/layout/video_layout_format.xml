<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_constraintTop_toBottomOf="@id/editOptionsRecyclerView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="invisible"
    android:padding="@dimen/card_padding_regular"
    android:id="@+id/formatConstraintLayout"
    >
    <!-- 1:1 -->
    <View
        android:id="@+id/squareBackground"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@drawable/video_crop_notselected"
        />

    <View
        android:layout_width="73dp"
        android:layout_height="69dp"
        app:layout_constraintTop_toTopOf="@id/squareBackground"
        app:layout_constraintStart_toStartOf="@id/squareBackground"
        android:background="@drawable/video_crop_btn"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        />
    <ImageView
        android:id="@+id/ivSquare"
        app:layout_constraintStart_toStartOf="@id/squareBackground"
        app:layout_constraintEnd_toEndOf="@id/squareBackground"
        app:layout_constraintTop_toTopOf="@id/squareBackground"
        app:layout_constraintBottom_toBottomOf="@id/squareBackground"
        android:src="@drawable/mountain"
        android:padding="15dp"
        android:layout_width="75dp"
        android:layout_height="75dp"/>

    <!--    portraint -->
    <View
        android:id="@+id/portraitBackground"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/squareBackground"
        app:layout_constraintEnd_toStartOf="@id/landscapeBackground"
        android:layout_width="58dp"
        android:layout_height="75dp"
        android:background="@drawable/video_crop_notselected"
        />

    <View
        android:layout_width="56dp"
        android:layout_height="69dp"
        app:layout_constraintTop_toTopOf="@id/portraitBackground"
        app:layout_constraintStart_toStartOf="@id/portraitBackground"
        android:background="@drawable/video_crop_btn"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        />

    <ImageView
        android:id="@+id/ivPortrait"
        app:layout_constraintStart_toStartOf="@id/portraitBackground"
        app:layout_constraintTop_toTopOf="@id/portraitBackground"
        android:src="@drawable/mountain"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:layout_width="58dp"
        android:layout_height="75dp"/>
    <!--    landscape -->
    <View
        android:id="@+id/landscapeBackground"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="116dp"
        android:layout_height="75dp"
        android:background="@drawable/video_crop_notselected"
        />

    <View
        android:layout_width="106dp"
        android:layout_height="73dp"
        app:layout_constraintTop_toTopOf="@id/landscapeBackground"
        app:layout_constraintStart_toStartOf="@id/landscapeBackground"
        android:background="@drawable/video_crop_btn"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        />

    <ImageView
        android:id="@+id/ivLangscape"
        android:layout_width="116dp"
        android:layout_height="75dp"
        app:layout_constraintStart_toStartOf="@id/landscapeBackground"
        app:layout_constraintEnd_toEndOf="@id/landscapeBackground"
        app:layout_constraintTop_toTopOf="@id/landscapeBackground"
        android:src="@drawable/mountain"
        android:padding="15dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>